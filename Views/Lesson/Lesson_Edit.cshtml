@model study4_be.Models.Lesson
<style>
    .flex {
        margin-top: 20px;
        display: flex;
        align-items: center;
    }
</style>


<div class="form-horizontal">
    <h4>Lesson</h4>
    <hr />
    <div class="card-body">
        <p class="card-description"> Edit</p>
        <form asp-action="Lesson_Edit" method="post" enctype="multipart/form-data" class="forms-sample">
            <div class="form-group">
                <label for="LessonType">LessonType</label>
                <input asp-for="LessonType" class="form-control" />
                <span asp-validation-for="LessonType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="LessonTitle">LessonTitle</label>
                <input asp-for="LessonTitle" class="form-control" />
                <span asp-validation-for="LessonTitle" class="text-danger"></span>
            </div>
            <div class="flex">
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-light" })
            </div>
        </form>
    </div>
</div>